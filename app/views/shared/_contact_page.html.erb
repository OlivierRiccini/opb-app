<div class="container-contact" id="contact">
  <%= image_tag("LOGO-FINAL-01.png", :alt => "logo-opb", width: 250, class: 'logo-contact-page') %>
  <span class="close-button" id="closing-cross-contact"></span>
  <div class="agency-intro">
    <h3 class="animate-reveal animate-first">Contact</h3>
    <p class="address animate-reveal animate-second"><%= @agency_address[2] %></p>
    <p class="address animate-reveal animate-second"><%= @agency_address[1] %></p>
    <p class="address animate-reveal animate-second"><strong><%= @agency_address[0] %></strong></p>
    <p class="email-address-agency animate-reveal animate-second"><%= @agency.email %> - <%= @agency.phone %></p>
    <%= link_to 'Envoyer un message', new_message_path, target: '_blank', class: 'animate-reveal animate-third' %>
  </div>
</div>
