<h1>Oli Pozzo DashBoard</h1>
<h2>All projects</h2>
<% @projects.each do |project| %>
  <p><%= project.title %> - <%= project.description %></p>
  <% if policy(project).show? %>
    <%= link_to "Details", project_path(project) %>
  <% end %>
  <% if policy(project).edit? %>
    <%= link_to "Edit", edit_project_path(project) %>
  <% end %>
  <% if policy(project).destroy? %>
    <%= link_to "Delete", project_path(project), :method => :delete, :data => {:confirm => "Are you sure Mr Oli Pozzo?"} %>
  <% end %>
<% end %>


<%= link_to "New Project", new_project_path %>

<%= link_to destroy_user_session_path, method: :delete do %>
  <%= t(".sign_out", default: "Log out") %>
<% end %>

<%= link_to 'Back', root_path %>
