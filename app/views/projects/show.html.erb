<h1><%= @project.title %></h1>
<p><strong>Status:</strong> <%= @project.state %></p>
<p><strong>Type 1:</strong> <%= @project.type_1 %></p>
<p><strong>Type 2:</strong> <%= @project.type_2 %></p>
<p><strong>description:</strong> <%= @project.description %></p>
<p><strong>Text:</strong> <%= @project.content %></p>

<% if policy(@project).edit? %>
  <%= link_to "Edit", edit_project_path(@project) %>
<% end %>
<% if policy(@project).destroy? %>
  <%= link_to "Delete", project_path(@project), :method => :delete, :data => {:confirm => "Are you sure Mr Oli Pozzo?"} %>
<% end %>

<div class="images-container">
  <div class="row">
    <% @project.images.each do |image| %>
    <div class="col-xs-6 col-md-3">
      <%= cl_image_tag image.url, width: 300, height: 200 %>
       <% if policy(image).destroy? %>
        <%= link_to "Delete Image",project_image_path(@project, image), :method => :delete, :data => {:confirm => "Hi Mr Oli! Are you sure you want to delete this image?"} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Add Image', new_project_image_path(@project) %>

<%= link_to 'Back', dashboard_path %>
